<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletSesion</servlet-name>
        <servlet-class>es.redmoon.poliza.net.session.ServletSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjaxPolizas</servlet-name>
        <servlet-class>es.redmoon.poliza.net.polizas.AjaxPolizas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjaxRecibos</servlet-name>
        <servlet-class>es.redmoon.poliza.net.recibos.AjaxRecibos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletSesionFacebook</servlet-name>
        <servlet-class>es.redmoon.poliza.net.session.ServletSesionFacebook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAltaIdentidadFederada</servlet-name>
        <servlet-class>es.redmoon.poliza.net.alta.ServletAltaIdentidadFederada</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletLoginFacebook</servlet-name>
        <servlet-class>es.redmoon.poliza.net.altas.ServletLoginFacebook</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletSesion</servlet-name>
        <url-pattern>/ServletSesion.servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjaxPolizas</servlet-name>
        <url-pattern>/AjaxPolizas.servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjaxRecibos</servlet-name>
        <url-pattern>/AjaxRecibos.servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletSesionFacebook</servlet-name>
        <url-pattern>/ServletSesionFacebook.servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAltaIdentidadFederada</servlet-name>
        <url-pattern>/ServletAltaIdentidadFederada.servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLoginFacebook</servlet-name>
        <url-pattern>/ServletLoginFacebook.servlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
